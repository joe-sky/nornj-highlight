{
  "name": "nornj",
  "displayName": "nornj-highlight",
  "description": "Syntax highlight and snippets for NornJ template engine in VS Code",
  "version": "0.4.0",
  "publisher": "joe-sky",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.15.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Themes",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:nornj"
  ],
  "main": "./out/extension",
  "capabilities": {
    "documentFormattingProvider": "true"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "contributes": {
    "languages": [
      {
        "id": "nornj",
        "aliases": [
          "NornJ",
          "nj"
        ],
        "extensions": [
          ".t.html",
          ".t.htm",
          ".nj.html",
          ".nj.htm",
          ".nj",
          ".nornj"
        ],
        "configuration": "./nj.configuration.json"
      },
      {
        "id": "text.css.nj",
        "aliases": [
          "CSS (NornJ)"
        ]
      },
      {
        "id": "source.ts.nj",
        "aliases": [
          "TypeScript (NornJ)"
        ]
      }
    ],
    "grammars": [
      {
        "language": "nornj",
        "scopeName": "text.html.nj",
        "path": "./syntaxes/nj.tmLanguage.json"
      },
      {
        "language": "source.ts.nj",
        "scopeName": "source.ts.nj",
        "path": "./syntaxes/nj.expression.tmLanguage.xml"
      },
      {
        "language": "text.css.nj",
        "scopeName": "text.css.nj",
        "path": "./syntaxes/nj.css.tmLanguage.json"
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.js.jsx",
          "source.tsx"
        ],
        "scopeName": "nj.expression",
        "path": "./syntaxes/nj.expression.json",
        "embeddedLanguages": {
          "meta.template.expression.ts": "typescript"
        }
      },
      {
        "injectTo": [
          "source.js",
          "source.ts",
          "source.jsx",
          "source.js.jsx",
          "source.tsx"
        ],
        "scopeName": "nj.css",
        "path": "./syntaxes/nj.css.json",
        "embeddedLanguages": {
          "source.css.scss": "css",
          "meta.embedded.line.ts": "typescript"
        }
      }
    ],
    "snippets": [
      {
        "language": "nornj",
        "path": "./snippets/nj.snippets.json"
      }
    ],
    "iconThemes": [
      {
        "id": "nornj-icons",
        "label": "NornJ",
        "path": "./icons.json"
      }
    ],
    "configuration": {
      "title": "nornj configuration",
      "properties": {
        "nornj.format.indentSize": {
          "type": "number",
          "default": null,
          "description": "Set indent size",
          "scope": "resource"
        },
        "nornj.format.indentChar": {
          "type": "string",
          "default": null,
          "description": "Set indent char",
          "scope": "resource"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joe-sky/nornj-highlight.git"
  },
  "keywords": [
    "nornj",
    "NornJ",
    "nj"
  ],
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "tslint": "^5.8.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
